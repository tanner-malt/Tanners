{
  "name": "portfolio-website",
  "version": "1.0.0",
  "description": "Portfolio website with animations",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:report": "node tests/report.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:report",
    "lint": "eslint .",
    "build": "npm run test:all && npm run lint",
    "precommit": "npm run test:all"
  },
  "dependencies": {
    "express": "^4.18.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "babel-jest": "^29.7.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.1.0",
    "puppeteer": "^21.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": ["./tests/setup.js"],
    "collectCoverageFrom": [
      "static/js/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "reporters": [
      "default",
      ["./tests/report.js", {}]
    ]
  }
} 